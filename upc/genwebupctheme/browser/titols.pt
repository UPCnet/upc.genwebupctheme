<tal:capsalera define="utils context/@@upc.genweb.utils;
                         portal_url context/@@plone_portal_state/portal_url;">
                         
    <div class="logo">
        <img usemap="#logoUPC" title="Universitat Politècnica de Catalunya"        
        tal:attributes="src string:${portal_url}/LogoUPC.gif"/>
        
        <map name="logoUPC" id="logoUPC"><area shape="circle" coords="23,23,20" href="http://www.upc.edu" target="_blank" alt="Universitat Politècnica de Catalunya" /></map>
        <a tal:attributes="href python: utils.getGWConfig().enllaslogotip" target="_blank">
          <span tal:condition="python: utils.getGWConfig().enllaslogotip">
            <!-- titol en catala -->
            <img  tal:attributes="src string:${portal_url}/logoPropi.gif;
                                            title python: utils.getGWConfig().firmaunitat_ca"
                tal:condition="python:utils.pref_lang()=='ca'" 
                />
            <!-- titol en castella -->
            <img  tal:attributes="src string:${portal_url}/logoPropi.gif;
                                            title python: utils.getGWConfig().firmaunitat_es"
                tal:condition="python:utils.pref_lang()=='es'"
                />
            <!-- titol en angles -->
            <img  tal:attributes="src string:${portal_url}/logoPropi.gif;
                                            title python: utils.getGWConfig().firmaunitat_en"
                tal:condition="python:utils.pref_lang()=='en'"
                />
          </span>
        </a>
    </div>
    <div class="titolWeb">
        <a href="" tal:attributes="href string:${view/portal_url}/">
            <!-- titol en catala -->
            <img longdesc="Títol de la Web"  tal:attributes="src string:${portal_url}/titolWeb_ca.gif;
                                                            title python: utils.getGWConfig().titolespai_ca"               
               tal:condition="python:utils.pref_lang()=='ca'"/>
            <!-- titol en castella -->
            <img longdesc="Títol de la Web"  tal:attributes="src string:${portal_url}/titolWeb_es.gif;
                                                            title python: utils.getGWConfig().titolespai_es"                
               tal:condition="python:utils.pref_lang()=='es'"/>
            <!-- titol en angles -->
            <img longdesc="Títol de la Web"  tal:attributes="src string:${portal_url}/titolWeb_en.gif;
                                                            title python: utils.getGWConfig().titolespai_en"               
               tal:condition="python:utils.pref_lang()=='en'"/>
        </a>
    </div>

</tal:capsalera>