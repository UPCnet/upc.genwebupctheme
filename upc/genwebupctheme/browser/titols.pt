<tal:capsalera define="utils context/@@upc.genweb.utils;
                         portal_url context/@@plone_portal_state/portal_url;">


<!-- logo producte -->

    <div class="logoProducte">
        <a tal:attributes="href python: getattr(utils.getGWConfig(),'enllaslogotipdret', '')" target="_blank">
		<span tal:condition="python: getattr(utils.getGWConfig(),'enllaslogotipdret', False)">
            <img tal:attributes="src string:${portal_url}/logoProducte.gif;
                                 alt python: getattr(utils.getGWConfig(),'enllaslogotipdretalt', '');
                                 title python: getattr(utils.getGWConfig(),'enllaslogotipdretalt', '')" />
        </span>
        </a>
    </div>

<!-- fi logo producte -->

                         
    <div class="logo">


        <img usemap="#logoUPC" title="Universitat Politècnica de Catalunya. BarcelonaTech" alt="Universitat Politècnica de Catalunya. BarcelonaTech"       
        tal:attributes="src string:${portal_url}/LogoUPC.gif"/>
        
        <map name="logoUPC" id="logoUPC">
		<area shape="circle" coords="23,23,20" href="http://www.upc.edu" target="_blank" alt="Universitat Politècnica de Catalunya. BarcelonaTech" title="Universitat Politècnica de Catalunya. BarcelonaTech" />
	 </map>
        <a tal:attributes="href python: utils.getGWConfig().enllaslogotip" target="_blank">
          <span tal:condition="python: utils.getGWConfig().enllaslogotip">
            <!-- titol en catala -->
            <img  tal:attributes="src string:${portal_url}/logoPropi.gif;
                                  title python: utils.getGWConfig().firmaunitat_ca;
                                  alt python: utils.getGWConfig().firmaunitat_ca"
                tal:condition="python:utils.pref_lang()=='ca'" 
                />
            <!-- titol en castella -->
            <img  tal:attributes="src string:${portal_url}/logoPropi.gif;
                                  title python: utils.getGWConfig().firmaunitat_es;
                                  alt python: utils.getGWConfig().firmaunitat_es"
                tal:condition="python:utils.pref_lang()=='es'"
                />
            <!-- titol en angles -->
            <img  tal:attributes="src string:${portal_url}/logoPropi.gif;
                                  title python: utils.getGWConfig().firmaunitat_en;
                                  alt python: utils.getGWConfig().firmaunitat_en"
                tal:condition="python:utils.pref_lang()=='en'"
                />
          </span>
        </a>
    </div>


    <div class="titolWeb">
	<h1>
        <a accesskey="1" href="" tal:attributes="href string:${view/portal_url}/">
            <!-- titol en catala -->
            <img tal:attributes="src string:${portal_url}/titolWeb_ca.gif;
                                                            alt python: utils.getGWConfig().titolespai_ca;  
                                                            title python: utils.getGWConfig().titolespai_ca"               
               tal:condition="python:utils.pref_lang()=='ca'"/>
            <!-- titol en castella -->
            <img tal:attributes="src string:${portal_url}/titolWeb_es.gif;
                                                            alt python: utils.getGWConfig().titolespai_es; 
                                                            title python: utils.getGWConfig().titolespai_es"                
               tal:condition="python:utils.pref_lang()=='es'"/>
            <!-- titol en angles -->
            <img tal:attributes="src string:${portal_url}/titolWeb_en.gif;
                                                            alt python: utils.getGWConfig().titolespai_en; 
                                                            title python: utils.getGWConfig().titolespai_en"               
               tal:condition="python:utils.pref_lang()=='en'"/>
        </a>
	</h1>
    </div>


</tal:capsalera>
