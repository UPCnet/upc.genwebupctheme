<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xml:lang="en" lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="upc.genwebupc">

  <body class="template-contacte" dir="ltr">

	<metal:block metal:fill-slot="top_slot"
    	tal:define="dummy python:request.set('disable_border', 1)" />

	<div metal:fill-slot="main">
	    <tal:main-macro metal:define-macro="main"	    				 
			   			tal:define="langtool nocall:context/portal_languages;
			              			lang_code langtool/getPreferredLanguage;
			              			global utils context/@@upc.genweb.utils;">
	
	
	    <tal:block tal:condition="python: utils.verificaIdUnitat(utils.getGWConfig().contacteid)">
	
		<div tal:replace="structure provider:plone.abovecontenttitle" />

		<h1>Contacte</h1>

		<div class="agendaContingut contacte" style="padding: 5px;">
	 		
	 		<!-- NOMBRE -->
			<h5 style="font-family: Arial,Helvetica,Verdana,sans-serif; font-size: 14px;"
				tal:content="python: utils.recodifica(utils.getContacteDataSql(utils.getGWConfig().contacteid)['nom_'+utils.cambiaPrefijo(lang_code)])"> Servei de Comunicació i Promoció
			</h5>
	
			<!-- DIRECCION -->
			<div class="contacteSpan" tal:condition="python: utils.getContacteDataSql(utils.getGWConfig().contacteid)['direccion']">Adreça</div>
			<div tal:content="python: utils.recodifica(utils.getContacteDataSql(utils.getGWConfig().contacteid)['direccion'])">Edifici BO (Bolet)			
			</div>
	
			<!-- TELEFONO -->
			<div class="contacteSpan" tal:condition="python: utils.getContacteDataSql(utils.getGWConfig().contacteid)['telefono']">Telèfon</div>
			<div tal:content="python: utils.recodifica(utils.getContacteDataSql(utils.getGWConfig().contacteid)['telefono'])">93 401 76 76
			</div>
			
			<!-- FAX -->
			<div class="contacteSpan" tal:condition="python: utils.getContacteDataSql(utils.getGWConfig().contacteid)['fax']">Fax</div>
			<div tal:content="python: utils.recodifica(utils.getContacteDataSql(utils.getGWConfig().contacteid)['fax'])">93 401 78 79
			</div>
			
			<!-- EMAIL -->
			<div class="contacteSpan" tal:condition="python: utils.getContacteDataSql(utils.getGWConfig().contacteid)['email']">A/e</div>
			<div tal:define="mail python: utils.recodifica(utils.getContacteDataSql(utils.getGWConfig().contacteid)['email'])">
				<a 	tal:attributes="href python: 'mailto: ' + mail"
		   		    tal:content="mail"></a>
			</div>
		</div>

		<!-- director -->
		
		<div class="contacteSpan contacteSpanBaix" tal:condition="python: utils.getContacteDataSql(utils.getGWConfig().contacteid)['director']">Direcció</div>
		<div class="contacteSpanBaix" tal:content="python: utils.recodifica(utils.getContacteDataSql(utils.getGWConfig().contacteid)['director'])">José Luís Vivanco
		</div>
		
		<!-- Personal -->
		
		<div class="contacteSpan contacteSpanBaix">Personal</div>
		<div class="contacteSpanBaix">
			<a 	tal:attributes="href python: utils.verificaIdEnlace(utils.getGWConfig().contacteid)"
				tal:content="python: 'Directori'"></a>
		</div>
		
		<!-- Planos y transportes -->
		
<!--	  	<span tal:condition="python: not utils.getGWConfig().boolmaps" class="contacteSpan"><img src="googleMaps.gif"/></span>-->
<!--		<div tal:condition="python: not utils.getGWConfig().boolmaps">-->
<!--			<a 	tal:attributes="href python: '#'"-->
<!--				tal:content="python: 'Plànols i transports'"></a>-->
<!--		</div>-->
			
		<div class="iframeContacte" tal:condition="python: utils.getGWConfig().boolmaps">
	  		<span class="contacteSpan">
	      		<img src="googleMaps.gif"/>
	   		</span>
	   		<div tal:replace="structure python: utils.getGWConfig().contactegmaps"></div>	
		</div> 
	
	</tal:block>
	

	<h2>Formulari de contacte</h2>

		<form action="."
		      tal:attributes="action request/URL"
		      class="enableAutoFocus"
		      method="post"
		      enctype="multipart/form-data">
		
		<fieldset>
		
			<legend>Detalls dels comentaris</legend> 
		     
			<tal:block tal:repeat="widget view/widgets">
	
	            <div class="field"
	                 tal:define="description widget/hint;
	                             error widget/error"
	                 tal:attributes="class python:'field'+(error and ' error' or '')">
	  
	                <label i18n:translate=""
	                       tal:attributes="for widget/name"
	                       tal:content="widget/label">
	                    label
	                </label>
	
	                <span class="fieldRequired"
	                      title="Required"
	                      i18n:attributes="title title_required;"
	                      i18n:translate="label_required"
	                      tal:condition="widget/required">
	                    (Required)
	                </span>
	
	                <div class="formHelp"
	                     i18n:translate=""
	                     tal:content="description"
	                     tal:condition="description">
	                    field description
	                </div>
	 
	                <div tal:condition="error"
	                     tal:content="structure error">
	                    The Error
	                </div>
	
	                <div class="widget" tal:content="structure widget">
	                    <input type="text"/>
	                </div>
	            </div>
	
			</tal:block>

		</fieldset>

		    <span tal:condition="view/availableActions">
		        <input tal:repeat="action view/actions" 
		               tal:replace="structure action/render" />
		    </span>
		
		</form>

	</tal:main-macro>

</div>      

</body>
</html>
