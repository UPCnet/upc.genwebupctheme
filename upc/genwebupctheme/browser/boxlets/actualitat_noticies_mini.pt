<tal:newsitems  tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                            plone_view context/@@plone;
                            news_items view/published_news_items"
                i18n:domain="plone">

	<tal:block tal:define="entries view/getRSS"
	           tal:condition="entries">
	
		<div id="portlet150"> </div>
		
	    <div id="caixaPortlet">
          <tal:block condition="news_items">	    
	    	<div class="titolPortlet"><div class="icoRSS">
          	          <a href=""
             	             tal:define="utils context/@@upc.genweb.utils"
             	             tal:attributes="href string:${utils/portal_url}news/aggregator/RSS">RSS <img src="rss.gif" alt="Sindicaci&oacute; RSS" /> 
         	          </a>
		      	  </div> Notícies
	    	</div>
	    	
	        <ul>
		        <li tal:repeat="obj news_items">
		            <a href=""
		               class="tile"
		               tal:attributes="href obj/getURL;
		                               title obj/Description">
		                <span tal:replace="obj/pretty_title_or_id">
		                Notícies RSS
		                </span>
		                <br>
		            </a>
		            <span class="portletItemDetails"
		                  tal:content="python:toLocalizedTime(obj.Date)">May 5</span>
		        </li>
	        </ul>
	        
	        <div id="portletPlus">  
	            <a href="#"> <img src="plus.gif" alt="més actualitat"> </a> 
	            <a href=""
	               tal:attributes="href view/all_news_link"
	               i18n:translate="box_more_news_link">
	               More news&hellip;
	            </a>
	        </div>
          </tal:block>
	        
	        <div tal:attributes="class python:news_items and 'titolPortlet separadorPortlet' or 'titolPortlet'">Actualitat UPC</div>
	        <ul>
		        <li tal:repeat="entry entries">
		            <a href=""
		                tal:attributes="title entry/summary | nothing;
		                           href entry/url | nothing" target=newwindow>
		                <span tal:replace="entry/summary | nothing">
		                Notícies RSS
		                </span>
		            </a>
		        </li>
	        </ul>	        

	        
	    </div> 
	    <div id="baix150"> </div>
	        	
	</tal:block>
</tal:newsitems>
