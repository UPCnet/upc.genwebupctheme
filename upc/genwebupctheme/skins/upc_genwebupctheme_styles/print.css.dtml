/*** per defecte i per tot ******************************************************************************************************************************************************/
body {
    font-family: Helvetica, Arial, sans-serif;
    font-size: 150% !important;
    *font-size: 75% !important; /*ajustament per a IE*/
    line-height:13pt !important;
    background:none !important;
}

@media print and (-webkit-min-device-pixel-ratio:0) {
    body { font-size: 50% !important; }/*saf*/
}

h1, h2, h3, h4, h5, h6, .titular1, .titular2, .titular3 {
    border: none;
    font-weight:bold;
    font-family: Helvetica, Arial, Verdana, sans-serif;
}
div, p, ul, dl, ol {
    width: auto;
}
ul, ol, dl {
    padding-right: 0.5em;	
}
ul { 
    list-style-type: square;
}
.documentDescription {
    font-weight: bold;
}


