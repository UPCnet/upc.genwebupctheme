<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
<body>
<tal:block i18n:domain="plone" metal:define-macro="portal_message">

    <div class="portalMessage info" id="kssPortalMessage" style="display:none">
        <div class="portalMessage_left">Info</div>
        <div class="portalMessage_right"><tal:block replace="nothing">KSS portal message</tal:block></div>
    </div>

    <tal:statusmsg tal:define="messages python: putils.showPortalMessages()"
                   tal:repeat="message messages">
        <div class="portalMessage info"
             tal:define="mtype message/type | nothing;"
             tal:attributes="class string:portalMessage ${mtype};">
            <div class="portalMessage_left" tal:content="python:mtype.capitalize()" i18n:translate="">Info</div>
            <div class="portalMessage_right" tal:content="message/message | nothing" i18n:translate="">
                The status message.
            </div>
        </div>
    </tal:statusmsg>

</tal:block>
</body>
</html>
