<Styles xmlns:tal="http://xml.zope.org/namespaces/tal">
    		 <Style name="Image on Left" element="img">
    		 		 <Attribute name="class" value="image_left" />
    		 </Style>
    		 <Style name="Image on Right" element="img">
    		 		 <Attribute name="class" value="image_right" />
    		 </Style>
    		 <Style name="Image on Top" element="img">
    		 		 <Attribute name="class" value="image_inline" />
