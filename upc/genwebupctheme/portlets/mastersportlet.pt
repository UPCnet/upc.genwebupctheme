<div id="navMasters" metal:define-macro="portlet"
	i18n:domain="upc.genwebupc"
	tal:define="utils context/@@upc.genweb.utils;
	            langtool nocall:context/portal_languages;
	            lang_code langtool/getPreferredLanguage;
	            url_actual python: request.ACTUAL_URL.split('/')[-1];
	            pURL python:context.portal_url()">
	
	<div>

		<ul class="portletNavigationTree navTreeLevel0">
		 	<li class="navTreeItem visualNoMarker" >
				<div>
                                   <a tal:condition="python: utils.getGWConfig().masterdoctorado==('Master i Doctorat')"
                                      tal:attributes="class python: utils.test(url_actual=='info-general','navItem1 visualIconPadding navTreeCurrentItem','navItem1 visualIconPadding');
		                                      href string:${pURL}/info-general"		                                  
		                      tal:content="python: utils.getTextMaster('info_gral_masters',lang_code)">InfoGeneral 
                                   </a>
                                   <a tal:condition="python: not utils.getGWConfig().masterdoctorado==('Master i Doctorat')"
                                      tal:attributes="class python: utils.test(url_actual=='info-general','navItem1 visualIconPadding navTreeCurrentItem','navItem1 visualIconPadding');
		                                      href string:${pURL}/info-general"		                                  
		                      tal:content="python: utils.getTextMaster('info_gral',lang_code)">InfoGeneral 
                                   </a>
                </div>
			</li>
        </ul>
	
	</div>
</div>

